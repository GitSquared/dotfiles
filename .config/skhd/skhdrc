# Yabai

# move focus
ctrl - left : yabai -m window --focus west
ctrl - down : yabai -m window --focus south
ctrl - up : yabai -m window --focus north
ctrl - right : yabai -m window --focus east

# move windows
cmd + ctrl - left : yabai -m window --warp west
cmd + ctrl - down : yabai -m window --warp south
cmd + ctrl - up : yabai -m window --warp north
cmd + ctrl - right : yabai -m window --warp east

# create stacks
ctrl - s : yabai -m window --stack recent

# navigate stack
cmd + shift - s : yabai -m window --focus stack.prev
cmd + shift - x : yabai -m window --focus stack.next

# float
ctrl - f : yabai -m window --toggle float

# balance splits
ctrl - space : yabai -m space --balance

# App shortcuts
ctrl - t : /bin/sh -c '/opt/homebrew/bin/kitty --single-instance -d ~ && kitty @ focus-window -m recent:1'
ctrl - h : /usr/bin/open ~
