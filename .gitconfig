[user]
	name = Gabriel Saillard
	email = gabriel.saillard@alan.eu
	signingkey = 572E718D77705BF7FF25C6911D54190574716312
[commit]
	gpgsign = true
[diff]
	tool = kitty
	guitool = kitty.gui
[difftool]
	prompt = false
	trustExitCode = true
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[alias]
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[merge]
	conflictstyle = zdiff3
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[pull]
	rebase = true
	ff = only
[push]
	default = current
[init]
	defaultBranch = master
[tag]
	gpgSign = true
[core]
	editor = nvim
[gpg]
	program = /opt/homebrew/bin/gpg
[fetch]
	prune = true
[maintenance]
	repo = /Users/alan-gs/Documents/git/alan-web
